generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model bernds {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name       String @unique
  slug       String @unique
  image       String?
  public_id   String?


  status      Boolean @default(true)
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
}
model Category {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name       String @unique
  slug       String @unique
  image       String?
  public_id   String?


  status      Boolean @default(true)
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
}
model Tag {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name       String @unique
  slug       String @unique



  status      Boolean @default(true)
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
}

